---
layout: null
title : RSS Feed
---

<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
	<channel>
		<title>Will Usher's Blog</title>
		<description>Computer Graphics and Programming</description>
		<link>https://www.willusher.io</link>
		<lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
		<pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
		<ttl>60</ttl>
		{% for post in site.posts %}
		<item>
			<title>{{ post.title | xml_escape }}</title>
			<description>{{ post.excerpt | xml_escape }}</description>
			<link>https://www.willusher.io/{{ post.url }}</link>
			<pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
		</item>
		{% endfor %}
		{% for pub in site.data.publications %}
		<item>
			<title>{{ pub.title | xml_escape }}</title>
			<description>
				{% if pub.teaser %}
				&lt;figure&gt;
					&lt;img src=&quot;{{pub.teaser}}&quot;/&gt;
					&lt;figcaption&gt;
						&lt;i&gt;{{pub.teaser_caption | xml_escape }}&lt;/i&gt;
					&lt;/figcaption&gt;
				&lt;/figure&gt;
				{% endif %}
				{{ pub.abstract | xml_escape }}
			</description>
			<link>https://www.willusher.io/publications/{{ pub.short_title }}</link>
			<pubDate>{{ pub.exact_date }}</pubDate>
		</item>
		{% endfor %}
	</channel>
</rss>
